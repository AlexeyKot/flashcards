<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1 class="text-center">Регистрация</h1>
		<%= render partial: 'flashes' %>
		<%= simple_form_for @user do |f| %>
		<%= f.input :email, label: 'Ваш эл.адрес', error: 'Поле обязательно к заполнению' %>
		<%= f.input :password, label: 'Пароль', error: 'Поле обязательно к заполнению' %>
		<%= f.input :password_confirmation, label: 'Подтверждение пароля', error: 'Поле обязательно к заполнению' %>
		<%= f.submit 'Зарегистрироваться' %>
		<% end %>
	</div>
</div>