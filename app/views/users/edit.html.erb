<h1 class="text-center">Профиль</h1>
<%= render partial: 'flashes' %>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= simple_form_for @user do |f| %>
  <%= f.input :email, label: 'Эл.почта', error: 'Поле обязательно к заполнению' %>
