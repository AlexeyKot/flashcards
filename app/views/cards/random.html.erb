<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="text-center">
      <%= render partial: 'flashes' %>
      <% if @card %>
      <h1>Как перевести</h1>
      <div class="card">
        <%= @card.translated_text %>
      </div>
    </div>
    <%= simple_form_for(:check, :url => check_cards_path) do |f| %>
    <%= f.input :answer, label: false, placeholder: 'Ваш перевод', error: 'Поле обязательно к заполнению' %>
    <%= f.hidden_field :id, value: @card.id %>
    <%= f.submit 'Проверить' %>
    <% end %>
    <% else %>
    <h1>Вы запомнили все карточки на сегодня</h1>
    <% end %>
  </div>
</div>
</div>
