<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">Все карточки</h1>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <div class="text-center">
      <% @cards.each do |card| %>
      <div style="border: 1px solid #e2e2e2; border-radius: 5px; padding: 10px; margin: 10px;">
          <i><%= card.original_text %></i> |
          <%= card.translated_text %>
      </div>
      <% end %>
    </div>
  </div>
</div>