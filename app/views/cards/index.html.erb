<div class="row">
  <div class="col-md-12">
    <h1 class="text-center">Все карточки</h1>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <div class="text-center">
      <% @cards.each do |card| %>
      <div style="border: 1px solid #e2e2e2; border-radius: 5px; padding: 20px; margin: 10px;">
          <p><%= I18n.localize(card.review_date.to_date, :format => :myformat) %></p>
          <p><strong><%= card.original_text %></strong> |
          <%= card.translated_text %></p>
          <p><a href=#>удалить</a></p>
      </div>
      <% end %>
    </div>
  </div>
</div>